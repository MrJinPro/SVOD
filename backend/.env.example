# Локальная БД (наша)
DATABASE_URL=postgresql+psycopg://svod:svod@localhost:5432/svod

# Внешняя/агентская БД (если нужно подключить отдельно)
# MySQL пример:
# AGENCY_DATABASE_URL=mysql+pymysql://user:pass@host:3306/agency?charset=cp1251
#
# MS SQL Server пример (нужен установленный ODBC Driver 17/18 для SQL Server):
# (на Ubuntu чаще ставят msodbcsql18)
# AGENCY_DATABASE_URL=mssql+pyodbc://user:pass@10.10.8.110:1433/Pult4DB?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
#
# MSSQL: имя базы, где лежат архивные таблицы archiveYYYYMM01/eventserviceYYYYMM01
# AGENCY_ARCHIVES_DB_NAME=pult4db_archives

# MSSQL archives: первичная загрузка с Date_Key (YYYYMMDD). Если не задано — с первого числа текущего месяца.
# AGENCY_MSSQL_ARCHIVE_START_DATE_KEY=20260101

# Демо-сидинг (по умолчанию выключен)
# ENABLE_DEMO_SEED=false

# Разрешённые origin'ы фронтенда (через запятую)
# Пример для локалки:
CORS_ORIGINS=http://localhost:5173
# Пример для LAN:
# CORS_ORIGINS=http://10.10.8.18:5173,http://10.10.8.18:4173
#
# Или вместо списка можно использовать regex (удобно для dev/LAN)
# CORS_ORIGIN_REGEX=^https?://.+(:5173|:4173)$

# Секрет для JWT (поменять в проде)
JWT_SECRET=dev-secret-change-me

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
# Можно не задавать: по умолчанию будут использоваться REDIS_URL
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Режим разработки
APP_ENV=dev
